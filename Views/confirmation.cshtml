@{
    Layout="Shared/_Layout.cshtml";
}

<h2>@Model["product"].GetName() has been added to your cart.</h2>

<form action="/product_added" method="post">
    <button type="submit" name="button" class="btn btn-info">Keep shopping</button>
</form>

<form action="/checkout">
    <button type="submit" name="button" class="btn btn-info">Check out</button>
</form>

<p><a href="/">Return home</a></p>
