@{
    Layout="Shared/_Layout.cshtml";
}
    </div>
    <h1>Review your cart</h1>

    <h2>Products</h2>

    @if(@Model["userProducts"].Count != 0 && @Model["user"].GetTotal() != 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Edit Cart</th>
                </tr>
            </thead>
            <tbody>
                @for(var i = 0; i < @Model["userProducts"].Count; i++)
                {
                    <tr>
                        <td>@Model["userProducts"][i].GetName()</td>
                        <td>@Model["userProducts"][i].GetPrice()</td>
                        <td><p></p>@Model["userCartProducts"][i].GetQuantity()</td>
                        <td>
                            <a href="/product/delete/@Model["userProducts"][i].GetId()" class="icon"><img src="../Content/img/layout/trash.png" ></a>

                            <a href="#" class="icon"><img src="../Content/img/layout/update.png"></a>
                            <form action='/product/update_quantity' method="post">
                                <input type="hidden" name="_method" value="PATCH">
                                <input  name='product-id' type='hidden' value='@Model["userProducts"][i].GetId()'>
                                <button name="submit" class="btn btn-primary" type="submit">Update quantity</button>
                                <select name="new-quantity">
                                @for(int j = 1; j <= @Model["userProducts"][i].GetCount(); j++ )
                                {
                                    <option value="@j">@j</option>
                                }
                                </select>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <h3>Total amount: $@Model["user"].GetTotal()</h3>
        <form action="/success" method="post">
            <button type="submit" name="button">Order products</button>
        </form>
        <form action="/clear_cart" method="post">
            <button type="submit" name="button">Remove all items in cart</button>
        </form>
    }
    else
    {
        <h2>You do not have any products in your cart</h2>
    }


    <p><a href="/">Return home</a></p>
</div>
