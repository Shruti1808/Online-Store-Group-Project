<h1>Review your cart</h1>

<h2>Products</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Product(s)</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in @Model["userProducts"])
        {
            <tr>
                <td>@product.GetName()</td>
                <td>@product.GetPrice()</td>
                <td>QUALITY GOES HERE</td>
            </tr>
        }
    </tbody>
</table>
<h3>Total amount: @Model["user"].GetTotal()</h3>

<form action="/success" method="post">
    <button type="submit" name="button">Order products</button>
</form>
