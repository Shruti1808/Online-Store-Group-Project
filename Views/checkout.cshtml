<h1>Review your cart</h1>

<h2>Products</h2>

@if(@Model["userProducts"].Count != 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Product(s)</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach(var cartProduct in @Model["userCartProducts"])
                {
                    @int productId = cartProduct.GetProductId();
                    @Product product = Product.Find(productId);
                    <td>@product.GetName()</td>
                    <td>@product.GetPrice()</td>
                    <td>@cartProduct.GetQuantity()</td>
                }
            </tr>

        </tbody>
    </table>
    <h3>Total amount: $@Model["user"].GetTotal()</h3>
    <form action="/success" method="post">
        <button type="submit" name="button">Order products</button>
    </form>
    <form action="/clear_cart" method="post">
        <button type="submit" name="button">Remove all items in cart</button>
    </form>
}
else
{
    <h2>You do not have any products in your cart</h2>
}



<p><a href="/">Return home</a></p>
