@{
    Layout = "Shared/_admin_Layout.cshtml";
}

<div class="jumbotron">
    <h1>Hello @Model["user"].GetFirstName()</h1>
</div>
<div class="container">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Product Manager
            </div>
            <div class="panel-body">
                <div class="panel panel-success form-group col-md-4">
                    <div class="panel-heading">
                        Add a new Product
                    </div>
                    <div class="panel-body">
                        <form action="/admin/products" method="post">
                            <input class="form-control" type="text" name="product-name" placeholder="Product Name">
                            <input class="form-control" type="text" name="product-description" placeholder="Description">
                            <input class="form-control" type="number" name="product-price" placeholder="Price" step="0.01">
                            <input class="form-control" type="number" name="product-count" placeholder="Count">
                            <input class="form-control" type="number" name="product-rating" placeholder="Product Rating">
                            <hr />
                            <label for="product-category">Select a Category</label>
                            <select class="form-control" name="product-category">
                                @foreach(var category in Model["categories"])
                                {
                                    <option value="@category.GetId()">@category.GetName()</option>
                                }
                            </select>
                            <hr />
                            <button class="btn btn-success" type="submit" name="button">Add Product</button>
                        </form>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            Search for a Product
                        </div>
                    </div>
                    <form action="/admin/search" method="post">
                        <input class="form-control" type="text" name="search-bar" placeholder="...">
                        <hr />
                        <button class="btn btn-success" type="submit" name="button">Search</button>
                    </form>
                </div>
                <div class="cold-md-4">
                    <a href="/admin/products"><button type="button" class="btn btn-primary">View All Products</button></a>
                    <hr />
                    <a href="#"><button type="button" class="btn btn-warning">Delete All Products</button></a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                User Manager
            </div>
            <div class="panel-body">
                <div class="panel panel-success form-group col-md-4">
                    <div class="panel-heading">
                        Add a new User
                    </div>
                    <div class="panel-body">
                        <form action="/admin/users" method="post">
                            <label for="first-name">First Name: </label>
                            <input type="text" name="first-name" class="form-control" required>
                            <label for="last-name">Last Name: </label>
                            <input type="text" name="last-name" class="form-control" required>
                            <label for="user-name">User Name: </label>
                            <input type="text" name="user-name" class="form-control" required>
                            <label for="password">Password: </label>
                            <input type="text" name="password" class="form-control" required>
                            <label for="admin-privileges">Give Admin Privileges?</label>
                            <select name="admin-privileges">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <label for="street">Street: </label>
                            <input type="text" name="street" class="form-control" required>
                            <label for="city">City: </label>
                            <input type="text" name="city" class="form-control" required>
                            <label for="State">State: </label>
                            <input type="text" name="State" class="form-control" required>
                            <label for="zip-code">Zip code: </label>
                            <input type="number" name="zip-code" class="form-control" required>
                            <label for="phone-number">Phone number: </label>
                            <input type="text" name="phone-number" class="form-control" required>
                            <hr />
                            <button class="btn btn-success" type="submit" name="button">Add User</button>
                        </form>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            Search for a Product
                        </div>

                    </div>
                    <form action="/admin/search" method="post">
                        <input class="form-control" type="text" name="search-bar" placeholder="...">
                        <hr />
                        <button class="btn btn-success" type="submit" name="button">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Activity Log
            </div>
            <div class="panel-body">
                View all activity log
            </div>
        </div>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add a product
            </div>
            <div class="panel-body">

            </div>

        </div>

    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add a product
            </div>
            <div class="panel-body">

            </div>

        </div>

    </div>
</div>
