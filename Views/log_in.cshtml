@{
    Layout="Shared/_Layout.cshtml";
}

<div class="row">
    <h1 class="signin_header">Log in</h1>
    <div class="col-xs-4">
    </div>
    <div class="col-xs-4">
    <form action="/signed_in" method="post" class="form-group">
        <label for="user-name">User Name: </label>
        <input type="text" name="user-name" class="form-control" required>
        <label for="password">Password: </label>
        <input type="text" name="password" class="form-control" required>
        <button type="submit" class="btn btn-info signin-button">Submit</button>
    </form>
    </div>
    <div class="col-xs-4">
    </div>
</div>
