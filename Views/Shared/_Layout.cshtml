<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <script src="../../Content/js/jquery-3.1.1.js" charset="utf-8"></script>
    <script src="../../Content/js/bootstrap.js" charset="utf-8"></script>
    <script src="../../Content\js\__jquery.tablesorter\jquery.tablesorter.js" charset="utf-8"></script>
    <script src="../../Content/js/scripts.js" charset="utf-8"></script>
    <link rel="stylesheet" href="../../Content/css/bootstrap.css">
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Open+Sans:400,600" rel="stylesheet">
    <link href="../../Content/css/rating.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="../../Content/css/styles.css">
    <title>Sizzle Stuff Kitchen Gadgets</title>
</head>
<body>
    @* START TOP BANNER *@
    <div id="top-banner">
        <img src="../../Content/img/logo/logo.png" id="logo" alt="">
        <h1>Sizzle Stuff</h1>
    </div>

    @* START NAVBAR *@
    <nav id="my-nav" class="navbar navbar-default">
        <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/sign_up">Create an Account</a></li>
            <li><a href="/log_in">Login</a></li>
        </ul>
        <form class="navbar-form navbar-left" action="/search" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="search-bar">
            </div>
            <button class="btn btn-info" type="submit" name="button">Search</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Preferences</a></li>
            <li><a href="/checkout">Cart</a></li>
        </ul>
    </nav>

    @* START JUMBOTRON *@
    <div class="jumbotron">
        <div id="photo-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="active item">
                    <img src="../../Content/img/carousel/kale_tool.jpg" alt="Kale Tool">
                </div>
                <div class="item">
                    <img src="../../Content/img/carousel/gadgets.jpg" alt="Gadgets">
                </div>
                <div class="item">
                    <img src="../../Content/img/carousel/assorted.jpg" alt="Kitchen Background">
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    @* START CONTAINER *@
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
    </div>
</body>
</html>
